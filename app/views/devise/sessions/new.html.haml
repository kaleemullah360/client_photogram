%body.img-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            %strong Login
          .panel-body
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f|
              = f.input :email, required: false, autofocus: true, input_html: { class: 'form-control', placeholder: 'Email'}
              .form-group
              = f.input :password, required: false, input_html: { class: 'form-control', placeholder: 'Password' }
              .form-group
                .col-sm-offset-5.col-sm-9
                  .checkbox
                    %label
                      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
              .form-group.last
                .col-sm-offset-3.col-sm-9
                  = f.button :submit,value: "Sign in", class: 'btn btn-success btn-sm'
                  %button.btn.btn-default.btn-sm{:type => "reset", :onclick => "#{new_password_path(resource_name)}"} Reset
          .panel-footer
            Not Registered?
            %a{:href => "#{new_user_registration_path}"} Register here


